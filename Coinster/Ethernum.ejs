                    <script>
                      document.addEventListener('DOMContentLoaded', () => {
                        fetch('/etherumchart')
                          .then(response => response.json())
                          .then(data => {
                            const dates = data.prices.map(entry => new Date(entry[1]));
                            const prices = data.prices.map(entry => entry[1]);
                  
                            const ctx = document.getElementById('cryptoChart').getContext('2d');
                            const cryptoChart = new Chart(ctx, {
                              type: 'line',
                              data: {
                                labels: ["jan", "feb", "march", "april", "may", "june", "july", "aug", "sept", "oct", "nov", "dec"],
                                datasets: [{
                                  label: 'Ethernum(INR)',
                                  data: prices,
                                  borderColor: '#0b76b6',
                                  borderWidth: 2,
                                  fill: true,
                                  backgroundColor: 'rgba(117, 19, 246,0.1)'
                                }],
                              },
                            });
                          })
                          .catch(error => console.error('Error fetching cryptocurrency data:', error.message));
                      });
                    </script>

            <script>
                // Function to fetch Bitcoin price
                function fetchBitcoinPrice() {
                    fetch('/Ethernum')
                        .then(response => {
                            if (!response.ok) {
                                throw new Error('Network response was not ok');
                            }
                            return response.json();
                        })
                        .then(data => {
                            // Update Bitcoin price on the page
                            document.getElementById('bitcoinPrice').textContent = data.price;
                        })
                        .catch(error => {
                            // Handle any errors that occurred during the fetch
                            console.error('Error fetching Bitcoin data:', error);
                        });
                }
        
                // Fetch Bitcoin price initially
                fetchBitcoinPrice();
        
                // Fetch Bitcoin price every 60 seconds (adjust as needed)
                setInterval(fetchBitcoinPrice, 300000);
            </script>
                    

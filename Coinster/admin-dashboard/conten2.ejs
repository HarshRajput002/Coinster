        <tbody>
            <% con.forEach(datas => { %>
                <tr>
                    <td><%= datas.contentype %></td>
                    <td><%= datas.contenname %></td>
                    <td> <a href="<%= datas.video %>"><img src="<%= datas.imge %>" style="width: 120px;"></a></td> 
                    <td><button type="submit" class="edit btn btn-primary" style="border-radius: 20px;" name="edit" id="edit">edit</button></td>
                    <td><button type="submit" class="delete btn btn-danger" style="border-radius: 20px;" name="delete" id="delete">Delete</button></td>
                </tr>
                <% }); %>
        </tbody>

    <script>
   function editClickListener(event) {
    var tr = event.target.closest('tr'); 
    var contentname = tr.cells[1].innerText.trim(); 
    console.log(contentname);
    window.location.href = '/edit?contentName=' + encodeURIComponent(contentname);
}

document.addEventListener("click", function(event) {
    if (event.target.classList.contains('edit')) {
        editClickListener(event);
    }
});
    </script>
    <script>
  function deleteClickListener(event) {
    var tr = event.target.closest('tr'); 
    var contentname = tr.cells[1].innerText.trim(); 
    console.log(contentname);
    window.location.href = '/delete?contentName=' + encodeURIComponent(contentname);
}

document.addEventListener("click", function(event) {
    if (event.target.classList.contains('delete')) {

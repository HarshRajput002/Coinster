    <form  action="/content" method="POST" enctype="multipart/form-data" >
    <table class=" shadow p-3 table table-tertiary table-striped  border-primary">
        <thead>
            <tr>
                <th>Content type</th>
                <th>video name</th>
                <th>Select thumbnail</th>
                <th>Select video</th>
                <th>upload</th>
            </tr>
        </thead>
        <tbody>
            
                <tr>
                    <td>
                  
                        <select class="form-control" id="contentType" name="contentype" style="border-radius: 20px;height:auto;" required>
                            <option value="blockchain">Blockchain</option>
                            <option value="news">News</option>
                            <option value="trad">Trad</option>
                            <option value="crypto">Crypto</option>
                        </select>
                    <td> <input type="text" class="form-control" id="exampleFormControlInput1" name="contenname" style="border-radius: 20px;" required></td>

                    <td><input class="form-control" type="file" id="formFile" accept="image/*" name="imge" style="border-radius: 20px;" required></td>

                    <td><input class="form-control" type="file" id="formFile" accept="video/*" name="video" style="border-radius: 20px;" required></td>
                    
                    <td><button type="submit" class="btn btn-success" style="border-radius: 20px;">Upload</button></td>
                </tr>
            </tbody>
        </table>
    </form>
    <br>
     <table class="table table-tertiary table-striped table-bordered border-primary" id="myTable">
        <thead>

    <div class="container">
        <table>
            <tr>
                <th>Name</th>
                <th>Symbol</th>
                <th>Current Price (USD)</th>
                <th>Change Percent (24 Hrs)</th>
            </tr>
            <% for(let i=0; i < cryptoData.length && i < 14; i++) { %>
                <tr>
                    <td>
                        <%= cryptoData[i].name || 'N/A' %>
                    </td>
                    <td>
                        <%= cryptoData[i].symbol || 'N/A' %>
                    </td>
                    <td>
                        <%= (cryptoData[i].priceUsd) || 'N/A' %>
                    </td>
                    <td
                        class="<%= typeof cryptoData[i].changePercent24Hr === 'number' ? (cryptoData[i].changePercent24Hr >= 0 ? 'positive-change' : 'negative-change') : '' %>">
                        <% if (typeof cryptoData[i].changePercent24Hr==='number' &&
                            !isNaN(cryptoData[i].changePercent24Hr)) { %>
                            (<%= (cryptoData[i].changePercent24Hr / 100).toFixed(4) %>)
                                <% } else { %>
                                    N/A
                                    <% } %>
                    </td>
